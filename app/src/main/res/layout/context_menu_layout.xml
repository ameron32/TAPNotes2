<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contextmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--android:layout_height="@dimen/note_row_height_min"-->

  <ImageView
      android:id="@+id/repos_button"
      style="?navBar_upper"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_toLeftOf="@+id/bold_button"
      android:layout_toStartOf="@+id/bold_button"
      android:adjustViewBounds="true"
      android:elevation="2dp"
      android:src="?context_menu_move"/>

  <ImageView
      android:id="@+id/bold_button"
      style="?navBar_upper"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_toLeftOf="@+id/important_button"
      android:layout_toStartOf="@+id/important_button"
      android:adjustViewBounds="true"
      android:elevation="2dp"
      android:src="?context_menu_bold"/>

  <ImageView
      android:id="@+id/important_button"
      style="?navBar_upper"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:adjustViewBounds="true"
      android:elevation="2dp"
      android:src="?context_menu_important"/>


  <ImageView
      android:id="@+id/edit_button"
      style="?navBar_upper"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_toEndOf="@+id/important_button"
      android:layout_toRightOf="@+id/important_button"
      android:adjustViewBounds="true"
      android:elevation="2dp"
      android:src="?context_menu_edit"/>


  <ImageView
      android:id="@+id/delete_button"
      style="?navBar_upper"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_toEndOf="@+id/edit_button"
      android:layout_toRightOf="@+id/edit_button"
      android:adjustViewBounds="true"
      android:elevation="2dp"
      android:src="?context_menu_delete"/>
</RelativeLayout>
