<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.ameron32.apps.tapnotes.v2.ui.view.AnimatingPaneLayout
        android:id="@+id/pane_layout"
        android:layout_above="@+id/editor_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <FrameLayout
          android:id="@+id/program_container"
          android:layout_width="@dimen/program_bar_width"
          android:layout_height="match_parent"
          android:background="@color/program_container_background">

        <!-- COMMIT FRAGMENT -->

      </FrameLayout>

      <FrameLayout
          android:id="@+id/notes_container"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <!-- COMMIT FRAGMENT -->

      </FrameLayout>
    </com.ameron32.apps.tapnotes.v2.ui.view.AnimatingPaneLayout>

    <FrameLayout
        android:id="@+id/editor_container"
        android:background="@color/editor_container_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

      <!-- COMMIT FRAGMENT -->

    </FrameLayout>
  </RelativeLayout>

  <android.support.design.widget.NavigationView
      android:id="@+id/nav_view"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:fitsSystemWindows="true"
      app:headerLayout="@layout/header_nav"
      app:menu="@menu/drawer_view"/>
</android.support.v4.widget.DrawerLayout>
