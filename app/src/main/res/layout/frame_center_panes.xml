<?xml version="1.0" encoding="utf-8"?>
<com.ameron32.apps.tapnotes.v2.ui.view.AnimatingPaneLayout
    android:id="@+id/pane_animating_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/editor_container">

  <FrameLayout
      android:id="@+id/left_pane"
      android:layout_width="@dimen/program_bar_width"
      android:layout_height="match_parent"
      android:background="?fragment_frame_border">

    <FrameLayout
        android:id="@+id/program_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/frame_border_size"
        android:background="?program_container_background">

      <!-- COMMIT FRAGMENT -->

    </FrameLayout>
  </FrameLayout>

  <FrameLayout
      android:id="@+id/main_pane"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/padding_catcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?fragment_frame_border">

      <FrameLayout
          android:id="@+id/notes_xcontainer"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="@dimen/frame_border_size">

        <!-- COMMIT FRAGMENT -->

      </FrameLayout>
    </FrameLayout>
  </FrameLayout>
</com.ameron32.apps.tapnotes.v2.ui.view.AnimatingPaneLayout>
