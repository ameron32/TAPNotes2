<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?default_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ameron32.apps.tapnotes.v2.ui.fragment.ProgramSelectionFragment">

  <ImageButton
      android:id="@+id/testing_button_mni"
      style="?attr/borderlessButtonStyle"
      tools:src="@mipmap/ic_launcher"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"/>

  <ImageButton
      android:id="@+id/refresh_button"
      style="?attr/borderlessButtonStyle"
      tools:src="@drawable/ic_action_sync"
      tools:tint="@color/colorPrimary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/testing_button_mni"
      android:layout_alignRight="@+id/testing_button_mni"/>

  <ImageView
      android:id="@+id/status_image"
      tools:src="@drawable/ic_action_get_app"
      tools:tint="@color/colorPrimary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/program_progress_bar"
      android:layout_alignRight="@+id/testing_button_mni"/>

  <ProgressBar
      android:id="@+id/program_progress_bar"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/testing_button_mni"
      android:layout_alignEnd="@+id/testing_button_mni"
      android:layout_alignLeft="@+id/testing_button_mni"
      android:layout_alignRight="@+id/testing_button_mni"
      android:layout_alignStart="@+id/testing_button_mni"
      android:indeterminate="true"
      android:visibility="invisible"/>

  <TextView
      android:id="@+id/program_progress_bar_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/testing_button_mni"
      android:layout_alignEnd="@+id/testing_button_mni"
      android:layout_alignLeft="@+id/testing_button_mni"
      android:layout_alignRight="@+id/testing_button_mni"
      android:layout_alignStart="@+id/testing_button_mni"
      android:visibility="invisible"
      tools:text="Progress Text"/>

  <TextView
      android:id="@+id/program_app_version"
      style="?android:textAppearanceSmall"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      tools:text="version 0.91"/>

</RelativeLayout>
