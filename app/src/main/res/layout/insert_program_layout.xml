<?xml version="1.0" encoding="utf-8"?>
<!--
  ~ PROGRAM (TALK LIST) LAYOUT
  ~
  ~ This view will never be any width other than 320dp.
  ~ Stick to layout_width="match_parent"
  ~ and you'll maintain proper width.
  ~
  ~ Remember:
  ~    use references to @string/ for localization
  ~    use references to @color/ for theme flexibility
  -->

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_container"
    android:layout_height="match_parent"
    android:layout_width="320dp"
    style="?listItem">

<com.ameron32.apps.tapnotes.v2.ui.mc_adapter.ProgramRecycler
    android:id="@+id/programRecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</FrameLayout>