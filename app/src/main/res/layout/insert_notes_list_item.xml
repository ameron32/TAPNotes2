<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?listItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/noteLayout">

    <TextView
        style="?listItem"
        android:id="@+id/notesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        tools:ignore="RtlHardcoded"
        android:minHeight="@dimen/note_row_height_min"
        android:layout_margin="16dp" />

    <include layout="@layout/context_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/notesTextView"
        android:layout_alignBottom="@+id/notesTextView"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/appendTextView"
        tools:ignore="MissingPrefix"
        fontPath="fonts/LiberationSerif-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notesTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>


